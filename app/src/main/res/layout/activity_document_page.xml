<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Document_page">

    <ImageView
        android:id="@+id/image_bar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/actionbar" />

    <TextView
        android:id="@+id/text_my_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="40dp"
        android:text="سندات قبض نقدي"
        android:textColor="@color/black"/>
    <ImageView
        android:id="@+id/image_document_arrow"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/arrow" />
    <TextView
        android:id="@+id/txt_sendto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:layout_marginLeft="330dp"
        android:text="اسم المنتج"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/edtext_sendto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/rounded_edittext"
        android:inputType="number"
        android:paddingLeft="290dp"
        android:text="0111598"
        android:layout_marginLeft="15dp"
        android:textColor="#000000"
        android:textColorHint="@color/grey" />
    android:textColorHint="@color/grey" />
    <TextView
        android:id="@+id/txt_type_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:textColor="@color/black"
        android:layout_marginLeft="340dp"
        android:text="نوع الدفع"
        android:textSize="15dp"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_edittext"
        />

    <TextView
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="320dp"
        android:text="الوصف"
        android:textColor="@color/black"
        android:textSize="15dp" />


    <EditText
        android:id="@+id/text_description"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="345dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/square_edittext"
        android:paddingRight="10dp"
        android:paddingBottom="50dp"
        android:inputType="textMultiLine"
        android:text="هناك حقيقة مثبتة منذ زمن طويل و هى ان المحتوى المقروء لصفحة ما ستلهى القارئ"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:ems="100"
        android:textColorHint="@color/grey" />


    <Button
        android:id="@+id/btn_sendto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="560dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/rounded_button"
        android:text="ارسال" />

</RelativeLayout>