<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Registration"
    android:background="#ffffff">

    <TextView
        android:id="@+id/text_regfirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#000000"
        android:text="سجل الان" />

    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-230dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/arrow" />
    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/logo" />

        <EditText
            android:id="@+id/edtext_firstname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="180dp"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="الاسم الاول"
            android:inputType="textPersonName"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <EditText
            android:id="@+id/edtext_lastname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/edtext_firstname"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="الاسم الاخير"
            android:inputType="textPersonName"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <EditText
            android:id="@+id/edtext_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/edtext_firstname"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="رقم الموبايل"
            android:inputType="number"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <EditText
            android:id="@+id/edtext_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="150dp"
            android:layout_below="@+id/edtext_firstname"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="البريد الاكترونى"
            android:inputType="textEmailAddress"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <EditText
            android:id="@+id/edtext_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="220dp"
            android:layout_below="@+id/edtext_firstname"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="كلمة المرور"
            android:paddingLeft="280dp"
            android:inputType="numberPassword"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <EditText
            android:id="@+id/edtext_retry_password"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="290dp"
            android:layout_below="@+id/edtext_firstname"
            android:textColor="#000000"
            android:background="@drawable/rounded_edittext"
            android:hint="اعادة كتابة كلمة المرور"
            android:paddingLeft="196dp"
            android:inputType="numberPassword"
            android:textColorHint="@color/grey" />
        <Button
            android:id="@+id/btn_reg_now"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="600dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/rounded_button"
            android:text="تسجيل دخول" />

        <TextView
            android:id="@+id/txt_haveaccount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="670dp"
            android:gravity="center"
            android:textSize="15dp"
            android:text="لدى حساب بالفعل,تسجيل دخول "
            android:textColor="#000000" />
    </RelativeLayout>
</LinearLayout>