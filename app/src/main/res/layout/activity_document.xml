<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Document"
    android:background="@color/white">


    <androidx.appcompat.widget.SwitchCompat
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:checked="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="130dp"
        android:thumb="@drawable/track_selector"
        app:track="@drawable/thum_selector"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/text_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-20dp"
        android:text="المرسل"
        android:textColor="@color/black"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="57dp" />

    <TextView
        android:id="@+id/text_recieve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="المستلمة"
        android:textColor="@color/black"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="130dp"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="57dp"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
          app:cardBackgroundColor="@color/greyshade"
            android:layout_marginTop="50dp"

        >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="سند قبض من احمد"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/text_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_name"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="-20dp"
                    android:text="01115698745"
                    android:textColor="@color/grey"/>
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_name"
                    android:layout_marginLeft="313dp"
                    android:text="15/4/2019"
                    android:textColor="@color/grey"/>

                <ImageView
                    android:id="@+id/img_dots_greeen"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    app:srcCompat="@drawable/dots" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
    <!--<androidx.cardview.widget.CardView-->
        <!--android:id="@+id/card_view"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_margin="5dp"-->
       <!--&gt;-->

    <!--</androidx.cardview.widget.CardView>-->
</LinearLayout>