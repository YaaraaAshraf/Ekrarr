<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@color/white">
    <TextView
        android:id="@+id/text_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="40dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="سجل الان" />

    <ImageView
        android:id="@+id/image_arrow"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginLeft="-220dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/arrow" />

    <RelativeLayout
        android:id="@+id/menuLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_logo"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="90dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/txt_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:layout_marginTop="330dp"
            android:text="هل نسيت كلمة المرور؟"
            android:textColor="@color/grey"
            />

        <TextView
            android:id="@+id/text_details"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingRight="20dp"
            android:textSize="15dp"
            android:layout_marginTop="370dp"
            android:text="هناك حقيقة مثبتة منذ زمن طويل وهى ان المحتوى المقروء لصفحة ما سيلهى القارئ"
            android:textColor="@color/grey"
            />

        <EditText
            android:id="@+id/edtext_add_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="35dp"
            android:layout_marginTop="450dp"
            android:textColor="@color/black"
            android:background="@drawable/rounded_edittext"
            android:hint="رقم الموبايل/ادخل البريد الاكترونى"
            android:inputType="textPersonName"
            android:paddingRight="10dp"
            android:textColorHint="@color/grey" />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginTop="530dp"
            android:layout_marginRight="35dp"
            android:background="@drawable/rounded_button"
            android:text="ارسال" />
    </RelativeLayout>
</LinearLayout>